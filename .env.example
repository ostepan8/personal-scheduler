# Example configuration for ApiServer (.env)

# Required: API key for all requests (send in Authorization or X-API-Key)
API_KEY=changeme

# Optional: Admin key for destructive operations (DELETE day/week/all/before)
# If set, those routes require this key; leave empty to allow with API_KEY.
ADMIN_API_KEY=

# Bind address and port
HOST=127.0.0.1
PORT=8080

# CORS: Set to the allowed origin for browser apps (e.g. http://localhost:3000)
# Leave empty to default to http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Rate limiting (fixed window). Defaults: 100 requests/60s
RATE_LIMIT=100
RATE_WINDOW=60

# Logging level for server and CLI: DEBUG, INFO, WARN, ERROR
# Default is INFO if unset. Set DEBUG to enable verbose diagnostics.
LOG_LEVEL=INFO

# GoodMorning/JARVIS wake endpoint
# The scheduler will POST a JSON payload to this URL at wake time.
# Example: http://localhost:8000/goodmorning
WAKE_SERVER_URL=

# Optional identity for wake payloads
USER_ID=
USER_TIMEZONE=America/New_York
